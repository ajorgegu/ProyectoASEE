<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexp.aplication">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fitline"
        android:label="FitLine"
        android:roundIcon="@mipmap/fitline"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.ComidasActivity">
        </activity>

        <activity android:name=".Activities.CrearComidaActivity">
        </activity>

        <activity android:name=".API.NetworkingAndroidHttpClientJSONActivity">
        </activity>

        <activity android:name=".Activities.ListaAlimentosActivity"
            android:parentActivityName=".Activities.MainActivity">
        </activity>

        <activity android:name=".Activities.DescripcionComidaActivity"
            android:parentActivityName=".Activities.MainActivity">
        </activity>

        <activity android:name=".Activities.ShettingsActivity">
        </activity>

    </application>

</manifest>