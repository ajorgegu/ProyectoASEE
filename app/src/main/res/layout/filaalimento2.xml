<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fila_alimento"
        android:layout_width="272dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cant"
        android:background="#ffffff" />

    <EditText
        android:id="@+id/cantidadAlimento"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/fila_alimento"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:hint="@string/introduzca_cantidad"
        android:inputType="textPersonName|number"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cantidadAlimento"
        android:layout_alignParentStart="true"
        android:text="@string/cantidad" />

    <Button
        android:id="@+id/borrarcomida"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="@mipmap/borrar" />

</RelativeLayout>